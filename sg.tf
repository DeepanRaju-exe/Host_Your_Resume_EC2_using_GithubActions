data "aws_vpc" "default" {
  default = true
}

// Fetch the default subnet
data "aws_subnet" "default" {
  filter {
    name   = "vpc-id"
    values = [data.aws_vpc.default.id]
  }

  filter {
    name   = "default-for-az"
    values = ["true"]
  }

  // Using availability zone to ensure it picks the correct subnet
  availability_zone = "us-east-1a"
}

